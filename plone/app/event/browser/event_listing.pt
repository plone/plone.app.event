<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.app.event">
<body>

<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core">
<tal:def define="batch view/get_events;
                 mode request/mode|string:future;
                 toLocalizedTime nocall: context/@@plone/toLocalizedTime;">

  <div class="event_listing">
    <header>
      <nav>
        <ul class="pae-list-mode">
          <li><a class="mode_month" href="" tal:attributes="href view/mode_month_url" i18n:translate="mode_month_link">Month</a></li>
          <li><a class="mode_week"  href="" tal:attributes="href view/mode_week_url"  i18n:translate="mode_week_link">Week</a></li>
          <li><a class="mode_day"   href="" tal:attributes="href view/mode_day_url"   i18n:translate="mode_day_link">Day</a></li>
        </ul>
        <tal:month condition="python:mode=='month'">
        <ul class="pae-list-nav">
          <li><a class="prev_month" href="" tal:attributes="href view/prev_month_url" i18n:translate="prev_month_link">Previous Month</a></li>
          <li><a class="this_month" href="" tal:attributes="href view/this_month_url" i18n:translate="this_month_link">This Month</a></li>
          <li><a class="next_month" href="" tal:attributes="href view/next_month_url" i18n:translate="next_month_link">Next Month</a></li>
        </ul>
        </tal:month>
        <tal:week condition="python:mode=='week'">
        <ul class="pae-list-nav">
          <li><a class="prev_week"  href="" tal:attributes="href view/prev_week_url"  i18n:translate="prev_week_link">Previous Week</a></li>
          <li><a class="this_week"  href="" tal:attributes="href view/this_week_url"  i18n:translate="this_week_link">This Week</a></li>
          <li><a class="next_week"  href="" tal:attributes="href view/next_week_url"  i18n:translate="next_week_link">Next Week</a></li>
        </ul>
        </tal:week>
        <tal:day condition="python:mode in ('day', 'today')">
        <ul class="pae-list-nav">
          <li><a class="prev_day"   href="" tal:attributes="href view/prev_day_url"   i18n:translate="prev_day_link">Previous Day</a></li>
          <li><a class="today"      href="" tal:attributes="href view/today_url"      i18n:translate="today_link">Today</a></li>
          <li><a class="next_day"   href="" tal:attributes="href view/next_day_url"   i18n:translate="next_day_link">Next Day</a></li>
        </ul>
        </tal:day>
      </nav>
    </header>

    <section class="cal_group">
      <header class="cal_group">
        <h2 tal:content="view/header_string">FROM UNTIL</h2>
      </header>
    <tal:items repeat="item batch">
      <article tal:define="startf python:view.date_speller(item.start)">
        <div class="cal_date">
            <span class="cal_wkday" tal:content="python:startf['wkday_abbr'][:2]">Tue</span>
            <span class="cal_day" tal:content="string:${startf/day}.">15.</span>
            <span class="cal_month" tal:content="string:${startf/month_abbr}.">Oct.</span>
        </div>
        <div class="cal_info">
          <h2><a href="" tal:attributes="href item/url" tal:content="item/title">Title</a></h2>
          <div class="documentByLine">
            <tal:date tal:replace="structure python:view.formated_date(item)"/><br/>
            <span class="cal_location" tal:condition="item/location" tal:content="item/location" />
          </div>

          <p tal:condition="item/description" tal:content="item/description" />

          <p>
            <a class="event_url"
                tal:condition="item/event_url"
                tal:attributes="href item/event_url"
                i18n:translate="label_web">Web</a>
            <tal:sep condition="item/event_url|nothing">
                &ndash;
            </tal:sep>
            <a class="contact_email"
                tal:condition="item/contact_email"
                tal:attributes="href string:mailto:${item/contact_email}"
                i18n:translate="label_email">Email</a>
            <tal:sep condition="item/event_url|item/contact_email|nothing">
                &ndash;
            </tal:sep>
            <a class="contact_phone"
                tal:condition="item/contact_phone"
                tal:attributes="href string:tel:${item/contact_phone}"
                i18n:translate="label_phone">Phone</a>
            <tal:sep condition="item/event_url|item/contact_email|item/contact_phone|nothing">
                &ndash;
            </tal:sep>
            <a class="event_ical"
                tal:attributes="href string:${item/url}/ics_view"
                i18n:translate="label_ical">iCal</a>
          </p>
        </div>

      </article>
    </tal:items>
    <section>

  </div>
  <div metal:use-macro="context/batch_macros/macros/navigation" />

</tal:def>
</metal:block>
</metal:content-core>

</body>
</html>
